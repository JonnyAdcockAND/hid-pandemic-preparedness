---
interface Props {
    title: string;
    description: string;
    href: string;
    thumbnail: string;
}

const {title, description, href, thumbnail} = Astro.props;
---
<div class="rounded-lg border border-gray-400">
    <img src={thumbnail} class="aspect-video rounded-t-lg object-cover"/>
    <div class="py-3.5 px-5">
        <a href={href} class="mt-2.5 text-blue-700 hover:text-blue-800">
            <h1 class="text-xl font-bold text-blue-700">{title}</h1>
        </a>
        <p class="mt-2.5 text-gray-800">{description}</p>
        <a href={href} class="block mt-2.5 text-blue-700 hover:text-blue-800 hover:underline hover:underline-offset-2">
            Read more
        </a>
    </div>
</div>